<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="950.0" prefWidth="700.0" spacing="15.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.areaController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label styleClass="title-label" text="Cálculo de Área de Región Curva">
        <font>
            <Font name="System Bold" size="28.0" />
        </font>
    </Label>
    <Label text="Función cuadrática: f(x) = ax² + bx + c" />

    <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">
        <Label text="Coeficiente a (a ≠ 0):" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="txtA" prefWidth="80.0" promptText="ej. 1" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Label text="Coeficiente b:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
        <TextField fx:id="txtB" prefWidth="80.0" promptText="ej. -2" GridPane.columnIndex="3" GridPane.rowIndex="0" />
        <Label text="Coeficiente c:" GridPane.columnIndex="4" GridPane.rowIndex="0" />
        <TextField fx:id="txtC" prefWidth="80.0" promptText="ej. 1" GridPane.columnIndex="5" GridPane.rowIndex="0" />
        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
        </rowConstraints>
    </GridPane>

    <Label text="Parámetros del Cálculo" />

    <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">
        <Label text="Intervalo [A, B] (A):" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="txtIntervaloA" prefWidth="80.0" promptText="ej. 1" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Label text="Intervalo [A, B] (B):" GridPane.columnIndex="2" GridPane.rowIndex="0" />
        <TextField fx:id="txtIntervaloB" prefWidth="80.0" promptText="ej. 5" GridPane.columnIndex="3" GridPane.rowIndex="0" />
        <Label text="N° Rectángulos (N):" GridPane.columnIndex="4" GridPane.rowIndex="0" />
        <TextField fx:id="txtRectangulosN" prefWidth="80.0" promptText="ej. 100" GridPane.columnIndex="5" GridPane.rowIndex="0" />
        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
        </rowConstraints>
    </GridPane>

    <HBox alignment="CENTER" spacing="10.0">
        <Button onAction="#calcularArea" text="Calcular Área" />
        <Button onAction="#guardarCalculoEnBD" text="Guardar" />
        <Button onAction="#mostrarHistorial" text="Ver Historial" />
        <Button onAction="#limpiarCampos" text="Limpiar" />
        <Button onAction="#volverAlMenu" text="Volver al Menú" />
    </HBox>

    <HBox alignment="CENTER" spacing="20.0">
        <CheckBox fx:id="chkMostrarInferior" selected="true" text="Mostrar Suma Inferior (Azul)" />
        <CheckBox fx:id="chkMostrarSuperior" selected="true" text="Mostrar Suma Superior (Verde)" />
    </HBox>

    <Label fx:id="lblMensajeError" textFill="#800400" wrapText="true" />

    <Label style="-fx-font-weight: bold;" text="Resultados">
        <font>
            <Font size="17.0" />
        </font>
    </Label>

    <HBox alignment="CENTER" spacing="30.0">
        <VBox alignment="CENTER" spacing="5.0">
            <Label text="Suma Inferior:" />
            <Label fx:id="lblSumaInferior" text="0.0000" style="-fx-font-weight: bold;" />
        </VBox>
        <VBox alignment="CENTER" spacing="5.0">
            <Label text="Suma Superior:" />
            <Label fx:id="lblSumaSuperior" text="0.0000" style="-fx-font-weight: bold;" />
        </VBox>
        <VBox alignment="CENTER" spacing="5.0">
            <Label text="Área Real:" />
            <Label fx:id="lblAreaReal" text="0.0000" style="-fx-font-weight: bold;" />
        </VBox>
    </HBox>

    <Label style="-fx-font-weight: bold;" text="Visualización Gráfica (Suma Inferior: Azul, Superior: Verde)" />

    <Pane fx:id="paneGrafico" prefHeight="850.0" prefWidth="650.0" style="-fx-border-color: #ccc; -fx-background-color: white;" />

</VBox>